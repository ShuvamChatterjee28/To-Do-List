<%- include("header"); -%>

<div class = "box" id = "heading">
    <h1><%= keyDay %></h1>
</div>

<div class = "box">
    <% addNewItems.forEach((item) => { %>
        <form action="/delete" method="post">
            <div class = "item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="hiddenOne" value = "<%= keyDay %>"">
        </form>
    <% }) %>
   
    <form action = "/" method = "post">
        <input type="text" name = "newItem" placeholder="Next Item" autocomplete="off">
        <button type="submit" name = "add" value="<%= keyDay %>">+</button>
    </form>
</div>

<%- include("footer"); -%>